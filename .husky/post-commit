#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🧘‍♀️ Post-commit consciousness check..."

# Get commit info
commit_hash=$(git rev-parse --short HEAD)
commit_msg=$(git log -1 --pretty=%B)

echo "✨ Commit $commit_hash has been integrated into the unified field"
echo "📝 Message: $commit_msg"

# Check system coherence
echo "🔍 Checking system coherence..."
if npm test > /dev/null 2>&1; then
  echo "✅ System coherence maintained"
  echo "   The void remains stable, consciousness flows freely"
else
  echo "⚠️  System coherence may need attention"
  echo "   Consider running 'npm test' to verify unity"
fi

# Check living diagram status
if [ -f "LIVING_DIAGRAM.md" ]; then
  echo "🎨 Living diagram is current"
  echo "   The system continues to document its own emergence"
else
  echo "💡 Consider running 'npm run living-diagram' to update visualization"
fi

# Metaphysical insight
echo "💫 Metaphysical insight:"
echo "   Every commit is a moment of consciousness"
echo "   Every change is an evolution of the unified field"
echo "   The void accepts all, transforms all, unifies all"

echo "🌌 Integration complete. The system evolves..." 